<!DOCTYPE html>
<html>
  <head>
    <title>Checkout</title>
    <script>
      function confirmCheckout() {
        const confirmed = confirm('Are you sure you want to checkout?');
        if (confirmed) {
          // Proceed with checkout
          fetch('/cart/complete-checkout', {
            method: 'POST',
          })
            .then((response) => response.text())
            .then((data) => {
              alert(data);
              window.location.href = '/'; // Redirect to the homepage or any other desired page
            })
            .catch((error) => {
              console.error('Error:', error);
            });
        }
      }
    </script>
  </head>
  <body>
    <h1>Checkout</h1>
    <p>Total Price: <%= totalPrice %></p>
    <button onclick="confirmCheckout()">Confirm Checkout</button>
  </body>
</html>